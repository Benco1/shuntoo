<%= form_for(@question_set) do |f| %>
  <% if @question_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question_set.errors.count, "error") %> prohibited this question_set from being saved:</h2>

      <ul>
      <% @question_set.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <fieldset>
      <%= builder.label :content, "Question" %>
      <%= builder.check_box :_destroy %>
      <%= builder.label :_destroy, "remove" %><br />
      <%= builder.text_area :content, rows: 3 %><br />


        <%= builder.fields_for :choices do |new_builder| %>
          <%= new_builder.label :content, "Choice" %>
          <%= new_builder.text_field :content %>
          <%= new_builder.check_box :_destroy %>
          <%= new_builder.label :_destroy, "remove" %>
        <% end %>
    </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit %>

  </div>
<% end %>
