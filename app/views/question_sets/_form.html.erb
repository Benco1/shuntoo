<%= form_for(@question_set) do |f| %>
  <%= render 'shared/form_errors', object: @question_set %>
  <div class="row collapse">
    <div>
      <%= f.label :title, class: "inline-left" %>
    </div>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_sets/question_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Question", f, :questions %>

  <div class="button-group">
    <br />
    <%= f.submit "Update", class: "button radius" %>
    <%= link_to "Cancel", question_sets_path, class: "button radius" %>
  </div>
<% end %>





