<h1>Menu</h1>

<div class="center">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @question_sets.each do |question_set| %>
        <tr>
          <td><%= link_to "#{question_set.title}", question_set %></td>
          <td><%= link_to 'Show', question_set %></td>
          <td><%= link_to 'Edit', edit_question_set_path(question_set) %></td>
          <td><%= link_to 'X', question_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Question set', new_question_set_path %>
</div>
