<% provide(:title, 'Polls Menu') %>

<div class="row">
  <div  class="large-10 small-centered columns">
    <h2 id="page-title" class="subheader">Polls Menu</h2>
  </div>
</div>

<div class="row">
  <%= link_to "Create Poll", new_question_set_path, class: "button"%>
</div>

  <ol>
    <% @question_sets.each do |question_set| %>
      <div id="poll-panel" class="panel clearfix">
        <div class="large-6 columns left">
          <h3><%= question_set['title'] %></h3>
        </div>
        <div class="right">
          <ul class="stack-for-small round secondary button-group">
            <li><%= link_to "Review", question_set, class: "button" %>
            </li>
            <li><%= link_to "Edit", edit_question_set_path(question_set), class: "button" %>
            </li>
            <li><%= link_to "Present!", question_set_questions_path(question_set), class: "button"%>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </ol>

