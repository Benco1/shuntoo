<% provide(:title, 'Review') %>

<div class="row">
  <div class="large-10 small-centered columns">
    <h2 id="page-title" class="subheader">
      <%= @question_set.title %></h2>
  </div>
</div> 

<div class="row">
  <%= link_to "Polls Menu",
    question_sets_path, class: "button" %>

  <%= link_to "Edit",
    edit_question_set_path(@question_set), class: "button" %>
</div>

  <% if @questions.nil? %>

    <div class="panel">
      <div class="medium-6 small-centered columns">
        <h3>Oh dang, this poll is empty :( </h3>
      </div>
    </div>

  <% else %>

    <ol>
      <% @questions.each do |question| %>
        <div id="question-panel" class="panel">
          <div class="row">
            <div id="question-text">
              <h3>Question:</h3>
              <h5 class="text-justify">
                <%= question.content %>
              </h5>
            </div>
          </div>
          <div>
            <ul id="choice-list">
              <% question.choices.each do |choice| %>
                <li><%= choice.content %></li>
              <% end %>
            </ul>
            <h5>
              Format:
              <span class="label"><%= question.question_format.name %>
              </span>
            </h5>
          </div>
        </div>
      <% end %>
    </ol>
  <% end %>
