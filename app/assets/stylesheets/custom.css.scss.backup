@import "foundation_and_overrides";

/* mixins, variables, etc. */

@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}


$black:       #000;
$grayDarker:  #222;
$grayDark:    #333;
$gray:        #555;
$grayMediumLight: #eaeaea;
$grayLight:   #999;
$grayLighter: #eee;
$white:       #fff;

/* universal */

body {
  padding-top: 70px;
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  height: 100%;
  height: 100%;
  overflow-y: scroll;
  background-color: $white;
  z-index: -1;
}

.static_pages {
  background: url('lanterns.jpg') no-repeat center center;
  background-size: cover;
  h1 {
    color: $white;
  }
  .center {
    background-color: #FF3300;
    border: 2px solid $white;
    color: $white;
    padding: 1em;
    line-height: 0em;
    p {
      margin: 0.25em;
      text-align: justify;
      text-justify: inter-word;
      text-indent: 2em;
    }
    .signature {
      text-align: right;
      margin-right: 3em;
    }
  }
}

textarea {
  resize: vertical;
}

.alert {
  text-align: center;
  width: 20%;
  padding: 1em;
  margin-bottom: 2em;
  font: bold medium sans-serif;
  color: red;
  background-color: #FF7B7B;
}

.container {
  height: 100%;
  width: 100%;
}

/* menu buttons */

.menu_buttons {
  ol {
  width: 90%;
  margin: auto;
  padding: 0;
  align: center;
  }
  a#launch_button li {
    background-color: red;
    color: $white;
    width: 20%;
    float: right;
  }
  a li {
    border: 1px solid $grayDark;
    background-color: $white;
    color: $black;
    border-radius: 10px;
    margin-bottom: 1em;
    padding: 1em 0 1em 0;
    text-align: center;
    font: 2em bold;
    width: 75%;
  } 
}

/* forms lists */

form .field {
  margin-bottom: 5px;
  textarea {
    width: 90%;
    border-radius: 10px;
  }
  input {
    width: 50%;
    border-radius: 10px;
  }
}

fieldset legend {
  font-weight: bold;
}

.center {
  width: 50%;
  text-align: center;
  padding: 5%;
  margin: auto;
  align: center;
  border-radius: 10px;
  background-color: $white;
  border: 1px solid $grayDark;
  a {
    text-decoration: none;
  }
  ol {
    list-style: none;
    padding: 0;
  }
}

.question_box {
  text-align: left;
  span {
    width: 80%;
  }
  width: 90%;
  background-color: $white;
  border-radius: 10px;
  margin: 10px auto 10px auto;
  padding: 1em;
  .edit_delete_links {
    align: right;
    margin-right: 5px;
  }
  ul {
    align: center;
    margin: auto;
    list-style: none;
  }
  li {
    list-style: none;
    margin: auto;
    padding: 0 0 1em 1em;
    text-align: left;
    font: 1.1em bold;
  }
}

.flow_button {
  font: bold medium sans-serif;
  border-radius: 10px;
  height: 20%;
  width: 30%;
}

/* forms */

.signup_form {
  input, textarea, select, .uneditable-input {
    border: 1px solid $grayDark;
    width: 50%;
    margin: auto;
    margin-bottom: 15px;
    display: block;
    border-radius: 10px;
    text-align: center;
    //@include box_sizing;
  }
}

.login_form {

  input, textarea, select, .uneditable-input {
    border: 1px solid $grayDark;
    width: 50%;
    margin: auto;
    margin-bottom: 15px;
    display: block;
    border-radius: 10px;
    text-align: center;
    @include box_sizing;
  }
}

.checkbox {
  width: 50%;
  margin: auto;
  margin-top: -10px;
  margin-bottom: 10px;
  display: block;
  span {
    margin-left: 5px;
    font-weight: normal;
  }
}

#session_remember_me {
  display: inline;
  width: auto;
  margin-left: 0px;
}

input {
  height: auto !important;
}

#error_explanation {
  h2 {
    color: $gray;
  }
  color: red;
  ul {
    padding: 0;
    color: red;
    margin: 0 0 30px 0;
  }
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1.425em;
  margin: 0 0 0.95em;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 1.2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: $grayLighter;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
} 

/* welcome unit */

#welcome_unit {
  height: 400px;
  width: 400px;
  margin: 5% 5% auto auto;
  align: center;
  position: relative;
  border-radius: 28px;
  background-color: #FF3300;
  border: 2px solid $white;
}

#welcome_content {
  text-align: center;
  align: center;
  z-index: 1;
  color: $white;
  font-weight: bold;
  h1 {
    font-size: 4.5em;
    margin-bottom: 0px;
  }
  h2 {
    font-size: 1.8em;
    margin: 0em 1em .5em 1em;
    font-style: italic;
  }
  ul {
    align: center;
    letter-spacing: 1px;
    padding-top: 1em;
    width: 70%;
    margin-top: 0em;
    margin-left: auto;
    margin-right: auto;
    border-top: 1px solid $white;
    border-bottom: 1px solid $white;
  }
  li {
    font: bold 1.2em sans-serif;
    padding-bottom: 0.5em;
    margin-left: 18%;
    text-align: justify;
    text-transform: uppercase;
  }
  a {
    text-decoration: none;
  }
  a#signup_button div {
    background-color: $grayLighter;
    border: 2px solid $grayLight;
    border-radius: 10px;
    color: $grayDark;
    width: 40%;
    text-aling: center;
    font: bold 1.4em sans-serif;
    margin: auto;
    padding: .75em;
  }
}

/* header */

header {
  height: 80px;
  top: 0;
  right: 0; left: 0;
  overflow: visible;
  position: fixed;
  z-index: 1;
}

#header_color_block {
  background-color: $black;
  filter:alpha(opacity=40); /* IE */
  -moz-opacity:0.4; /* Mozilla */
  opacity: 0.4; /* CSS3 */
  position: absolute;
  top: 0; left: 0;
  height: 100%; width:100%;
}

#header_nav {
  position: absolute;
  top: 0;
  width: 100%; height: 100%;
  a {
    text-decoration: none;
    color: $grayLighter;
      &:hover {
      color: $white;
    }
  }
  ul {
    margin-top: 35px;
    margin-right: 20px;
    float: right;
    list-style: none;
    li {
      text-transform: uppercase;
      float: left;
      margin-left: 40px;
      }
    .button {
      color: $grayLighter;
      &:hover {
      color: $white;
      }
    }
  }

  #logo {
    float: left;
    margin-top: 25px;
    margin-left: 20px;
    font-size: 1.5em;
    text-transform: uppercase;
    color: $grayLighter;
    letter-spacing: -1px;
    padding-top: 9px;
    font-weight: bold;
    line-height: 1;
    text-decoration: none;
    color: $grayLighter;
      &:hover {
      color: $white;
    }
  }
}

.dropdown{
  background: $grayLight;
  padding: .5em;
  width: 5em;
  padding: 0;
  color: $white;
  display:none;
  float: right;
  clear: both;
  margin-top: 1em;
}
.dropdown a{
  display:block;
  margin-bottom: .5em;
  color: $white;
  text-align: center;
  padding: .25em;
}

/* footer */

footer {
  bottom: 0;
  position: relative;
  margin-top: 20px;
  margin-left: 10px;
  margin-bottom: 40px;
  color: $gray;
  small {
    float: left;
  }
  a {
    text-decoration: none;
    color: $grayDarker;
      &:hover {
      color: $gray;
    }
  }
}